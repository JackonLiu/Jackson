<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


   <LinearLayout

        android:id="@+id/mystuff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/baise">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/grow108"
            android:layout_gravity="center_vertical"
        />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:text="我会很诚实"
            android:textColorHint="@color/black"
            android:textSize="22sp"
            />

    </LinearLayout>


    <LinearLayout

        android:id="@+id/mypopulerity"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/baise">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_action_import_export"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/mypopuler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="我的活跃度排名"
            android:textSize="22sp"
            />

    </LinearLayout>

    <LinearLayout

           android:id="@+id/myfavorites"
           android:layout_width="match_parent"
           android:layout_height="60dp"
           android:layout_marginTop="1dp"
           android:background="@color/baise"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/favoritesImage"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="10dp"
               android:src="@mipmap/favorite" />

           <TextView
               android:id="@+id/favoritesText"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center_vertical"
               android:layout_marginLeft="10dp"
               android:text="我的收藏"
               android:textSize="22sp" />

       </LinearLayout>

    <LinearLayout

        android:id="@+id/joinus"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/baise">

        <ImageView
            android:id="@+id/joinusImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_action_add_group"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/joinusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="加入我们"
            android:textSize="22sp"
            />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/sendToWX"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:background="@color/baise">

        <ImageView
            android:id="@+id/sendImage"
            android:layout_width="33dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/send_img"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/sendText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="分享到微信"
            android:textSize="22sp"
            />

    </LinearLayout>

    <LinearLayout

        android:id="@+id/setting"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="1dp"
        android:background="@color/baise">

        <ImageView
            android:id="@+id/settingImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_action_settings"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:id="@+id/settingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:text="设置"
            android:textSize="22sp"
            />

    </LinearLayout>


</LinearLayout>